    <script>
        var projection = d3.geo.mercator().center([123, 24]).scale(8000);
        var path = d3.geo.path().projection(projection);


        d3.json("taiwanMap.json", function(mapDataSet) {
            d3.csv("location.csv", function(lDataSet) {
                bind(mapDataSet, lDataSet);
                render(mapDataSet, lDataSet);
            });

        });

        function bind(topoRoot, lDataSet) {
            var projection = d3.geo.mercator().center([123, 24]).scale(8000);
            var path = d3.geo.path().projection(projection);
            var geoRoot = topojson.feature(topoRoot, topoRoot.objects["COUNTY_MOI_1070516"]);
            var selection = d3.select("svg").selectAll("path").data(geoRoot.features);
            selection.enter().append("path").classed("map-boundary", true).attr("d", path);
            selection.exit().remove();


        }

        function render(mapDataSet, lDataSet) {

            d3.selectAll("path")
                .attr({
                    fill: function(d, i) {
                        return "#5DAC81";
                    }
                })

            var line = d3.svg.line()
                .x(function(d) {
                    return projection([+d["x"],
                        +d["y"]
                    ])[0];
                })
                .y(function(d) {
                    return projection([+d["x"],
                        +d["y"]
                    ])[1];
                })
                .interpolate('cardinal-closed');


            d3.select("svg").append("path")
                .attr("class", "cycleRoute")
                .attr({
                    'd': line(lDataSet),
                    'stroke': 'grey',
                    'stroke-width': '2px',
                    'fill': 'none',
                    'stroke-dasharray': 10,
                })

            var selection_c = d3.select("svg").selectAll("circle").data(lDataSet);

            selection_c.enter().append("circle");
            selection_c.exit().remove();

            d3.selectAll("circle")
                .attr({

                    cx: function(d) {
                        return projection([+d["x"],
                            +d["y"]
                        ])[0]
                    },
                    cy: function(d) {
                        return projection([+d["x"],
                            +d["y"]
                        ])[1]
                    },
                    r: 4,
                    fill: "#F7C242"

                })

            var selection_t = d3.select("svg").selectAll("text").data(lDataSet);

            selection_t.enter().append("text");
            selection_c.exit().remove();

            d3.selectAll("text")
                .attr({

                    x: function(d, i) {
                        if (i != 10) {
                            return projection([+d["x"],
                                +d["y"]
                            ])[0] - 30
                        } else {
                            return projection([+d["x"],
                                +d["y"]
                            ])[0] + 5
                        }
                    },
                    y: function(d) {
                        return projection([+d["x"],
                            +d["y"]
                        ])[1] - 6
                    },


                }).text(function(d) {
                    return d.name
                })

            var linePath = d3.selectAll("path.cycleRoute");
            var totalLength = linePath.node().getTotalLength();

            linePath.attr("stroke-dasharray", totalLength + " " + totalLength)
                .attr("stroke-dashoffset", totalLength)
                .transition()
                .duration(5000)
                .ease("linear")
                .attr("stroke-dashoffset", 0);







        }
    </script>
</body>

</html>
